<h1>Hengyi Media Invoice System</h1>
<table>
  <% @products.each do |product| %>
  <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
      <dt><h2><%= product.title %><h2></dt>
      <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', product, :class => 'submit-button' %>  &nbsp;
      <%= link_to ' Edit ', edit_product_path(product), :class => 'submit-button' %>  &nbsp;
      <%= link_to ' Del. ', product, 
                  method: :delete,
                  data: { confirm: 'Are you sure?' } , 
                  :class => 'submit-button'
      %>
    </td>
  </tr>
  <% end %>
</table>
<br/>
<%= tag "input", { "type" => "button", "class" => "submit-button", "value" => " New ", "onclick" => "addRow()" } %> WORKED 
<%= link_to 'New Invoice', new_product_path %>

